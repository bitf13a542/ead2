<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Mobiles</title>
    <meta charset="utf‐8" />
</head>
<body>
    @Html.Partial("_header")

    @{
        if (Session["login"] != "login")
        {
            <script>
                                
                @{
            Response.Redirect("~/Home/loginP");
                }
                function myfun() {
                    
                   
                    var i = document.getElementById('pass1').value;
                    var j = document.getElementById('pass2').value;
                    if (i != j) {
                        alert("Beta Kidr?");
                        alert("Passwords are not same!");
                        return false;

                    }
                    return true;
                }

            </script>
        }
    }

    <div class="clear"> </div>

    <div class="wrap">
        <div class="content">
            <div class="content-grids">
                <marquee direction="right">
                    <h1 style="color: #94CB32">Add Mobiles</h1></marquee>
                    <div class="contact-form">

                        @{using (Html.BeginForm("check", "Home", FormMethod.Get,
                            new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Name:</label>
                                <input type="text" class="form-control" name="name" placeholder="e.g Samsung grand Prime" required />
                            </div>
                            <div class="form-group">
                                <label for="comment">Description</label>
                                <textarea class="form-control" style="font-size:medium" name="desc" rows="5" id="comment"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Price in Rs. </label>
                                <input type="number" class="form-control" name="price" placeholder="e.g 10000 or 20000 etc " required />
                            </div>
                            <div class="form-group">
                                <label>Year </label>
                                <input type="text" class="form-control" name="year" required placeholder="e.g : 2016">
                            </div>
                            <div class="form-group">
                                <label>Model Name </label>
                                <input type="text" class="form-control" name="model" value="" placeholder="GS-1706 etc" required>
                            </div>
                            <label>Company Name </label>
                            <br>

                            <label class="radio-inline">

                                <input type="radio" name="company" checked value="samsung" required> samsung
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="Q-mobile" required> Q-mobile
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="G-five" required>G-five
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="htc" required>HTCs
                            </label>
                            <br><br><br>

                            <div>
                                <label for="file">Upload Image:</label>
                                <input type="file" name="file" id="file" />
                            </div>
                            <br><br>
                            <input type="submit" value="Submit" onclick="return myfun()">

                            <p>@ViewBag.Message</p>



                        }

                        }
                    </div>

</div>
        </div>
    </div>

