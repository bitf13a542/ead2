@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <title>login</title>
</head>
<body>
    @Html.Partial("_header")

    @{

    if (Session["login"] != "login")
    {
    <div class="clear"> </div>
        
<div class="wrap">
    <div class="content">
        <div class="content-grids">
            <div class="contact-form">
                <h2>Login  Here </h2>
                <form style="text-align:left" role="form" action="~/Home/login" method="get">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <span><input type="text" class="form-control" name="email" placeholder="abc@xyz.com" pattern=".{5,25}" required /></span>
                    </div>

                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <span><input type="password" class="form-control" name="pass" placeholder="at least 6 characters" pattern=".{6,}" required /></span>
                    </div>

                    <div><span><input type="submit" value="Login"></span></div>
                </form>
            </div>
        </div>   
    </div>
</div>
                        }
}
                        @{
        if (Session["login"] == "login" && Session["person"] == "admin")
        {
                            @Html.Partial("adminP")
 
        }
        else if (Session["login"] == "login" && Session["person"] == "user")
        {
            
            Response.Redirect("~/user/userP");
           
    }
                        }


</body>
</html>
