                                <label>Model Name </label>
                                <input type="text" class="form-control" name="model" value="" placeholder="GS-1706 etc" required>
                            </div>

                            <div class="form-group">
                                <label>RAM </label>
                                <input type="text" class="form-control" name="ram" value="" placeholder="4 GB etc" required>
                            </div>

                            <div class="form-group">
                                <label>ROM </label>
                                <input type="text" class="form-control" name="rom" value="" placeholder="400 GB etc" required>
                            </div>

                            <div class="form-group">
                                <label>Processor </label>
                                <input type="text" class="form-control" name="processor" value="" placeholder="1.7 Quadcore etc" required>
                            </div>

                            <div class="form-group">
                                <label>Display size </label>
                                <input type="text" class="form-control" name="display" value="" placeholder="11 inch etc" required>
                            </div>

                            <label>Company Name </label>
                            <br>

                            <label class="radio-inline">

                                <input type="radio" name="company" checked value="apple" required> Apple
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="dell" required> Dell
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="hp" required>HP
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="company" value="samsung" required>Samsung
                            </label>
                            <br><br><br>

                            <div>
                                <label for="file">Upload Image:</label>
