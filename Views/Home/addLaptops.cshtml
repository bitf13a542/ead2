                            <div class="form-group">
                                <label>Name:</label>
                                <input type="text" class="form-control" name="name" placeholder="e.g Apple Macbook Air etc" required />
                            </div>
                            <div class="form-group">
                                <label for="comment">Description</label>
                                <textarea class="form-control" style="font-size:medium" name="desc" rows="5" id="comment"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Price in Rs. </label>
